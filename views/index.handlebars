{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}

{{!-- * Create a button in `index.handlebars` that will submit the user input into the database. --}}
<center>
    <div class="row">
        <img src="/assets/img/burger.png">
    </div>
</center>


<div class="row">
    <center>
        <!-- Left side (ready to eat) -->
        <div class="col-md-6">
            <h4 class="purp_font">Ready to eat!</h4>
            <div id="ready_to_eat">

                <!-- Dynamically Insert Ready Burgers Here -->
                {{#each burgers}}
                {{#unless devoured}}
                <form class="change-devour">
                    <div class="input-group">
                        <li class="form-control">{{id}}. {{burger_name}}</li>
                        <span class="input-group-btn">
                            <button class="btn btn-success devour-button" data-id="{{id}}" data-devour=1
                                type="submit">Devour
                                It!</button>
                        </span>
                    </div>
                </form>
                {{/unless}}
                {{/each}}

            </div>
        </div>

        <!-- Right side (already eaten) -->
        <div class="col-md-6">
            <h4 class="purp_font">Already eaten!</h4>
            <div id="already_eaten">

                <!-- Dynamically Insert Eaten Burgers Here -->
                {{#each burgers}}
                {{#if this.devoured}}
                <div class="input-group">
                    <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
                    <span class="input-group-btn">
                        <button class="btn btn delete-button" type="button" data-id="{{this.id}}">Delete</button>
                    </span>
                </div>
                {{/if}}
                {{/each}}

            </div>
        </div>
    </center>
</div>
<br><br>
<div class="row">
    <form class="create-form">

        <!-- Text Area Input -->
        <div class="row">
            <!-- Empty Div to help center textarea -->
            <div class="col-md-3"></div>

            <!-- Burger Input Box -->
            <div class="form-group col-md-6">
                <center><label for="new_burger" </label>
                </center>
                <input placeholder="Create your own burger and place your order Here!" type="text" class="form-control"
                    columns="8" rows="4" id="new_burger" name="burger_name"></input>
            </div>

            <!-- Empty Div to help center textarea -->
            <div class="col-md-3"></div>
        </div>

        <!-- Submit Button -->
        <center>
            <button id="submit-button" type="submit" class="btn btn-danger">Place Order</button>
        </center>

    </form>

</div>